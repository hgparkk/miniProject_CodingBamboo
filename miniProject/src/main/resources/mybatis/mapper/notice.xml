<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codingbamboo.miniproject.notice.dao.INoticeDAO">
	<sql id="noticeSearch">
	  <if test="searchWord != null">
	  	<choose>
	  		<when test="searchOption == 'title'">AND a.no_title LIKE '%' || #{searchWord} || '%'</when>
	  		<when test="searchOption == 'content'">AND a.no_content LIKE '%' || #{searchWord} || '%'</when>
	  		<when test="searchOption == 'name'">AND b.user_name = #{searchWord}</when>
	  	</choose>
	  </if>
	</sql>
	
	<!-- 공지사항 게시글 목록 가져오기 -->
	<select id="getNoticeList" resultType="com.codingbamboo.miniproject.notice.dto.NoticeDTO" parameterType="com.codingbamboo.miniproject.common.SearchVO">
		SELECT *
		FROM (
			SELECT 
				A.*
				, ROWNUM AS rnum
			FROM (
				SELECT
					no_no
					, no_title
					, no_content
					, no_top
				FROM
					notice
				WHERE 1=1
				<include refid="noticeSearch"/>
				ORDER BY no_no DESC
			) A
		)
		WHERE rnum BETWEEN #{start} AND #{end}
	</select>
	
	<!-- 공지사항 top에 등록된 게시글 가져오기 -->
	<select id="getNoticeTopList" resultType="com.codingbamboo.miniproject.notice.dto.NoticeDTO" parameterType="com.codingbamboo.miniproject.common.SearchVO">
		SELECT *
		FROM (
			SELECT 
				A.*
			FROM (
				SELECT
					no_no
					, no_title
					, no_content
					, no_top
				FROM
					notice
				WHERE 1=1
					AND no_top = 1
				ORDER BY no_no ASC
			) A
		)
		WHERE ROWNUM BETWEEN #{start} AND #{end}
	</select>
	
	<!-- 공지사항에 공지글 추가 -->
	<insert id="insertNotice" parameterType="com.codingbamboo.miniproject.notice.dto.NoticeDTO">
		INSERT INTO notice(
			no_no
			, no_title
			, no_content
			, no_top
		) VALUES (
			no_seq.NEXTVAL
			, #{noTitle}
			, #{noContent}
			, 0
		)
	</insert>
	
	<!-- 공지사항에 있는 게시글 숫자 가져오기 -->
	<select id="getNoticeCount" resultType="int">
		SELECT COUNT(*)
		FROM notice
		  <include refid="noticeSearch"/>
	</select>
	
	<!-- 공지사항 보기 -->
	<select id="getNotice" resultType="com.codingbamboo.miniproject.notice.dto.NoticeDTO">
		SELECT 
		      no_no
		    , no_title 
		    , no_content 
		FROM notice
		WHERE 1=1
		  AND no_no = #{no}
	</select>
	
	<!-- 공지사항 삭제 -->
	<delete id="deleteNotice" parameterType="int">
		DELETE FROM notice
		WHERE no_no = #{noNo}
	</delete>
	
	<!-- 공지사항 수정 -->
	<update id="updateNotice" parameterType="com.codingbamboo.miniproject.notice.dto.NoticeDTO">
		UPDATE notice
		SET no_title = #{noTitle}
			, no_content = #{noContent}
		WHERE no_no = #{noNo}
	</update>
</mapper>